{# Project Lifecycle Timeline Component #}
<div class="lifecycle-timeline">
    <div class="timeline-track">
        {% for stage in stages %}
            <div class="timeline-stage
                {% if stage.status == 'completed' %}completed
                {% elseif stage.status == 'in_progress' %}in-progress
                {% else %}not-started{% endif %}">

                {# Stage Icon/Circle #}
                <div class="stage-icon">
                    {% if stage.status == 'completed' %}
                        <i class="fas fa-check-circle"></i>
                    {% elseif stage.status == 'in_progress' %}
                        <i class="fas fa-spinner fa-pulse"></i>
                    {% else %}
                        <i class="far fa-circle"></i>
                    {% endif %}
                </div>

                {# Stage Label #}
                <div class="stage-label">
                    <small>{{ stage.name|replace({'流程': ''}) }}</small>
                    {% if stage.status == 'completed' %}
                        <span class="badge bg-success">✓</span>
                    {% elseif stage.status == 'in_progress' %}
                        {% if stage.progress is defined and stage.progress is not null %}
                            <span class="badge bg-warning">{{ stage.progress }}%</span>
                        {% else %}
                            <span class="badge bg-warning">进行中</span>
                        {% endif %}
                    {% else %}
                        <span class="badge bg-secondary">待办</span>
                    {% endif %}
                </div>

                {# Connecting Line #}
                {% if not loop.last %}
                    <div class="stage-line"></div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
</div>

<style>
.lifecycle-timeline {
    padding: 20px 0;
}

.timeline-track {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    position: relative;
    margin: 0 auto;
    max-width: 100%;
}

.timeline-stage {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
    position: relative;
    text-align: center;
}

.stage-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    margin-bottom: 10px;
    z-index: 2;
    background: white;
    border: 3px solid;
}

.timeline-stage.completed .stage-icon {
    border-color: #198754;
    color: #198754;
}

.timeline-stage.in-progress .stage-icon {
    border-color: #ffc107;
    color: #ffc107;
}

.timeline-stage.not-started .stage-icon {
    border-color: #6c757d;
    color: #6c757d;
}

.stage-label {
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.stage-label small {
    font-weight: 500;
    display: block;
    white-space: nowrap;
}

.stage-line {
    position: absolute;
    top: 20px;
    left: 50%;
    width: 100%;
    height: 3px;
    background: #dee2e6;
    z-index: 1;
}

.timeline-stage.completed .stage-line {
    background: #198754;
}

.timeline-stage.in-progress .stage-line {
    background: linear-gradient(to right, #198754 0%, #ffc107 50%, #dee2e6 100%);
}

@media (max-width: 768px) {
    .stage-label small {
        font-size: 0.7rem;
    }
    .stage-icon {
        width: 30px;
        height: 30px;
        font-size: 16px;
    }
}
</style>
